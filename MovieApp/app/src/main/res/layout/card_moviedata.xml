<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        card:cardElevation="2dp"
        card:cardCornerRadius="3dp"
>
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:background="#E8EAF6"
                  android:orientation="horizontal">
        <ImageView android:layout_width="150dp" android:layout_height="match_parent"
                   android:id="@+id/poster"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                      android:gravity="center"
                      android:weightSum="3"
                      android:padding="10dp"
                      android:orientation="vertical">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:textSize="24sp"
                      android:textAlignment="center"
                      android:layout_weight="1"
                      android:id="@+id/movieName"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_weight="1"
                          android:id="@+id/releaseDateLayout">
                <ImageView android:layout_width="50dp" android:layout_height="50dp"
                           android:layout_gravity="center"
                           android:src="@drawable/ic_event_black_50dp"
                           android:id="@+id/dateIcon"/>
                <Space android:layout_width="10dp" android:layout_height="match_parent"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/releaseDate"
                          android:layout_gravity="center"
                          android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_weight="1"
                          android:id="@+id/ratingLayout">
                <ImageView android:layout_width="50dp" android:layout_height="50dp"
                           android:layout_gravity="center"
                           android:src="@drawable/ic_thumbs_up_down_black_50dp"
                           android:id="@+id/ratingIcon"/>
                <Space android:layout_width="10dp" android:layout_height="match_parent"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/rating"
                          android:layout_gravity="center"
                          android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>