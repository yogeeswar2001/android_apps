<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".MainActivity">

    <Spinner
            android:layout_width="0dp"
            android:layout_height="45dp" android:id="@+id/from_opt"
            app:layout_constraintEnd_toStartOf="@+id/to_opt"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/from_txt"
            android:entries="@array/options"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="45dp" android:id="@+id/to_opt"
            app:layout_constraintStart_toEndOf="@+id/from_opt"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/to_txt"
            android:entries="@array/options"/>

    <TextView
            android:text="@string/from_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/from_txt"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="65dp" app:layout_constraintEnd_toStartOf="@+id/to_txt"
            android:layout_marginEnd="144dp" android:layout_marginRight="144dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/from_opt"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/to_txt"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="65dp" android:layout_marginLeft="144dp" android:layout_marginStart="144dp"
            app:layout_constraintStart_toEndOf="@+id/from_txt"
            android:layout_marginBottom="18dp" app:layout_constraintBottom_toTopOf="@+id/to_opt"
            android:text="@string/to_txt" android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
    <EditText android:layout_width="0dp" android:layout_height="wrap_content"
              android:layout_marginTop="50dp"
              app:layout_constraintTop_toBottomOf="@+id/from_opt"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.0"
              android:hint="@string/hint" android:id="@+id/input"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="43dp" android:id="@+id/ans"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/input"/>
    <Button
            android:text="@string/btn"
            android:layout_width="200dp"
            android:layout_height="50dp" android:id="@+id/con_btn"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/ans"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:onClick="onclickBtn"/>
</androidx.constraintlayout.widget.ConstraintLayout>